{
  "$schema": "http://json.schemastore.org/template",
  "author": "nventive",
  "name": "nventive NetStandard Component Template",
  "identity": "NV.Templates.Component",
  "groupIdentity": "NV.Templates.Component",
  "shortName": "nv-netstandard-component",
  "classifications": ["Component"],
  "tags": {
    "language": "C#",
    "type": "project"
  },
  "sourceName": "NV.Templates.Component",
  "preferNameDirectory": true,
  "symbols": {
    "company": {
      "type": "parameter",
      "datatype": "string",
      "defaultValue": "MyCompany",
      "replaces": "Company",
      "description": "The name of the company which determines the assembly company and copyright information."
    },
    "license": {
      "type": "parameter",
      "datatype": "string",
      "defaultValue": "Apache-2.0",
      "replaces": "Apache-2.0",
      "description": "The component license SPDX identifier."
    }
  },
  "sources": [
    {
      "modifiers": [
        {
          "exclude": [
            "**/[Bb]in/**",
            "**/[Oo]bj/**",
            ".template.config/**/*",
            "**/*.filelist",
            "**/*.user",
            "**/*.lock.json",
            ".vs/**",
            ".git/**"
          ]
        }
      ]
    }
  ]
}
